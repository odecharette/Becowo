{% extends "BecowoCoreBundle::layout.html.twig" %}

{% block title %}
  {{ parent() }} - {{member.username}}
{% endblock %}

{% block body %}

<br><br>
<div class="container-fluid">
	<div class="row">
		<div class="col-lg-1 col-lg-offset-5">
		photo
		</div>
		<div class="col-lg-6">
		{{member.firstname}} {{member.name}}<br>
		{{member.city}}<br>
		Inscrit depuis le {{member.createdOn|date("d/m/Y")}}
		</div>
	</div>
<br><br>	
	<div class="row">
		<div class="col-lg-6">
			<h4>Coordonnées</h4>
			Email : {{member.email}}<br>
			Téléphone : {{member.phone}}<br>
			<hr>
			Rue : {{member.street}}<br>
			Ville : {{member.postcode}} {{member.city}}<br>
			Pays : {{member.country.name}}<br>
		</div>
		<div class="col-lg-6">
			<h4>CV</h4>
			Activité professionnelle : {{member.job}}<br>
			Entreprise : {{member.society}}<br>
			Site / Blog : {{member.website}}<br>
			Présentation : {{member.description}}<br>
		</div>
	</div>
</div>

<br><br><br><br>

{% endblock %}