{% extends "BecowoCoreBundle::layout.html.twig" %}

{% block title %}
  {{ parent() }} - {{ws.name}}
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row text-center">
			<div class="col-lg-3">
				Ici logo de l'espace
			</div>
			<div class="col-lg-6">
				<h1>{{ws.name}}</h1>
			</div>
			<div class="col-lg-3">
				Ici panel votes
			</div>
		</div>
{############################################# Caroussel #########################################}
		<div class="row">
			<div class="col-lg-12">
				{% include 'BecowoCoreBundle:Workspace:carroussel.html.twig' %}
			</div>
		</div>
{############################################# Description #########################################}
		<div class="row">
			<div class="col-lg-10">
				<h4>A propos de cet espace</h4>
				<p>{{ws.description}}</p>
				<div class="well well-sm">
					{{ws.descriptionBonus}}
				</div>
			</div>
{############################################# Horaires #########################################}
			<div class="col-lg-2">
				<div class="well">
					<h5>Logo clock</h5>
					TO DO<br>
					TO DO<br>
					TO DO<br>
					<br>
					<a href="{{ws.website}}" target="_blank">{{ws.website}}</a><br>
					<br>
					<button type="button" class="btn btn-primary">Contacter le Manager</button>
				</div>
			</div>
		</div>
		<hr>
{############################################# Services #########################################}
		<div class="row">
			<div class="col-lg-9">
				<h4>Les services</h4>
				<ul>
					{% for amenity in ws.amenities %}
						<li>{{amenity.name}}</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-lg-3">
				<div class="well">
				Panel Map
				</div>
			</div>
		</div>
		<hr>
{############################################# Offices #########################################}
		<div class="row">
			<div class="col-lg-9">
				<h4>Les Bureaux</h4>
				<ul>
					{% for office in ws.office %}
						<li>{{office.name}}</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-lg-3">
				<div class="well">
				Panel Event
				</div>
			</div>
		</div>
		<hr>

	</div>

{% endblock %}