{% extends "BecowoCoreBundle::layout.html.twig" %}

{% block title %}
  {{ parent() }} - {{ws.name}}
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row text-center">
			<div class="col-lg-3">
				Ici logo de l'espace
			</div>
			<div class="col-lg-6">
				<h1>{{ws.name}}</h1>
			</div>
			<div class="col-lg-3">
				Ici panel votes
			</div>
		</div>
{############################################# Caroussel #########################################}
		<div class="row">
			<div class="col-lg-12">
				{% include 'BecowoCoreBundle:Workspace:carroussel.html.twig' %}
			</div>
		</div>
{############################################# Description #########################################}
		<div class="row">
			<div class="col-lg-10">
				<h4>A propos de cet espace</h4>
				<p>{{ws.description}}</p>
				<div class="well well-sm">
					{{ws.descriptionBonus}}
				</div>
			</div>
{############################################# Horaires #########################################}
			<div class="col-lg-2">
				<div class="well">
					<h5>Logo clock</h5>
					TO DO<br>
					TO DO<br>
					TO DO<br>
					<br>
					<a href="{{ws.website}}" target="_blank">{{ws.website}}</a><br>
					<br>
					<button type="button" class="btn btn-primary">Contacter le Manager</button>
				</div>
			</div>
		</div>
		<hr>
{############################################# Services #########################################}
		<div class="row">
			<div class="col-lg-9">
				<h4>Les services</h4>
				<ul>
					{% for amenity in ws.amenities %}
						<li>{{amenity.name}}</li>
					{% endfor %}
				</ul>
			</div>
{############################################# Panel Map #########################################}
			<div class="col-lg-3">
				<div class="well">
					<div class="embed-responsive embed-responsive-16by9">
				    	<iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d40492.55484396377!2d3.01214105760308!3d50.6311166961078!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c2d579b3256e11%3A0x40af13e81646360!2sLille!5e0!3m2!1sfr!2sfr!4v1464538152692" allowfullscreen></iframe>
					</div><br>
					{{ws.street|capitalize}} <br>
			  		{{ws.postcode}} {{ws.city}} <br><br>
			  		<button type="button" class="btn btn-primary">Calculer mon itinéraire</button>
				</div>
			</div>
		</div>
		<hr>
{############################################# Offices #########################################}
		<div class="row">
			<div class="col-lg-9">
				<h4>Les Bureaux</h4>
				<ul>
					{% for office in ws.office %}
						<li>{{office.name}}</li>
					{% endfor %}
				</ul>
			</div>
{############################################# Panel Event #########################################}
			<div class="col-lg-3">
				<div class="well">
					<h4>Evenements</h4>
					<p>Ne manquez pas les évènements chez {{ws.name}}</p>
					{% include 'BecowoCoreBundle:Workspace:events.html.twig' %}
				</div>
			</div>
		</div>
		<hr>

	</div>

{% endblock %}