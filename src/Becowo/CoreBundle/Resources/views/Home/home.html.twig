{% extends "BecowoCoreBundle::layout.html.twig" %}

{% block title %}
  {{ parent() }} - Accueil
{% endblock %}

{% block body %}

{############################################ Vidéo ##############################################}

<div class="container" id="video"><div class="row"><div class="col-md-6 col-md-offset-3">
	<div class="embed-responsive embed-responsive-16by9">
	    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/FepLZO6Q2Ms" allowfullscreen></iframe>
	</div>
</div></div></div>
{############################################ Moteur de recherche ##############################################}
 	<h2>Ici moteur de recherche </h2>
	
	 	<div id="vignette_espace" class="container-fluid">
	 		<div class="row">
			
{############################################ Google Map ##############################################}
		<div class="col-md-7">
			<div class="embed-responsive embed-responsive-16by9">
	    <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d40492.55484396377!2d3.01214105760308!3d50.6311166961078!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c2d579b3256e11%3A0x40af13e81646360!2sLille!5e0!3m2!1sfr!2sfr!4v1464538152692" allowfullscreen></iframe>
	</div></div>
{############################################ Vignettes Workspaces ##############################################}
		<div class="col-md-5">
	 				{% for ws in workspaces %}
	 		<div class="well">
	 			<div class="row text-center"><div class="col-md-12">
				  	<h3>{{ws.name}}</h3>
			  	</div></div>
			  	<div class="row"><div class="col-md-6">
			  		{{ws.street|capitalize}} <br>
			  		{{ws.postcode}} {{ws.city}}
			  	</div></div>
			  	<br>
			  	<div class="row" id="Vignettes-image"><div class="col-md-12">
			  		{# TO DO : récupérer et stocker les images en BDD#}
			  		<img src="{{ app.request.basepath }}/images/yelloworking-1.jpg" alt="Yellow Working" width="200px" height="120px">
			  		<img src="{{ app.request.basepath }}/images/yelloworking-2.jpg" alt="Yellow Working" width="200px" height="120px">
			  		<img src="{{ app.request.basepath }}/images/yelloworking-3.jpg" alt="Yellow Working" width="200px" height="120px">
			  	</div></div>
			  	<br>
			  	<div class="row"><div class="col-md-3">
			  		{# TO DO #}
			  		Office 1 <br>
			  		Office 2 <br>
			  		Office 3 <br>
			  	</div></div>
			  	<br>
			  	<div class="row"><div class="col-md-9">
			  		<div class="row text-justify"><div class="col-md-12">
			  			{{ws.description}}
			  		</div></div>
			  	</div>
			  	<div class="col-md-3">
			  		<div class="row text-right"><div class="col-md-12">
			  			<button type="button" class="btn btn-info">Voir la fiche</button>
			  		</div></div>
			  	</div>
			  	</div>
		  	</div>
		  	
	{% endfor %}</div>
	
</div>
		</div>

	<br><br>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-6">
{############################################ Derniers inscrits ##############################################}

			<h2>Ils ont rejoint la communauté</h2>
			{% for member in members %}
				<img src="{{ app.request.basepath }}/images/{{member.ProfilePicture.url}}" alt="member.ProfilePicture.alt" width="115px" height="115px" class="img-circle" title="{{member.pseudo}}, {{member.city}}">
			{% endfor %}
		</div>
		<div class="col-md-6">
{############################################ Barre Instagram ##############################################}
			<h2>Suivez-nous sur Instagram</h2>
			{% include 'BecowoCoreBundle:RS:instagram.html.twig' %}
		</div>
	</div>
</div>



	<br><br>

{############################################ Nouveaux espaces ##############################################}

<div class="container-fluid"><div class="row"><div class="col-md-8">
	{# Ne récupérer que les 3 derniers workspaces #}
	<h2>Les nouveaux espaces</h2>
	<div id="vignette_espace_mini" class="container">
	 		<div class="row">
	{% for newWs in newWorkspaces %}
		<div class="col-md-4">
	 		<div class="well">
	 			<div class="row text-center"><div class="col-md-12">
				  	<h2>{{newWs.name}}</h2>
			  	</div></div>
			  	<div class="row"><div class="col-md-12">
			  		{# TO DO : récupérer et stocker les images en BDD#}
			  		<img src="{{ app.request.basepath }}/images/yelloworking-1.jpg" alt="Yellow Working" width="200px" height="120px">
			  	</div></div>
			  	<div class="row"><div class="col-md-12">
			  		{{newWs.street|capitalize}}, {{newWs.postcode}} {{newWs.city}}
			  	</div></div>
		</div></div>
	{% endfor %}
</div></div></div>
{############################################ Coup de coeur ##############################################}
<div class="col-md-4">
	<h2>Notre coup de coeur</h2>
	<div id="vignette_espace_mini" class="container-fluid">
	 		<div class="row">
	{% if workspaceFavorite %}
		<div class="col-md-12">
	 		<div class="well">
	 			<div class="row text-center"><div class="col-md-12">
				  	<h2>{{workspaceFavorite.workspace.name}}</h2>
			  	</div></div>
			  	<div class="row"><div class="col-md-12">
			  		{# TO DO : récupérer et stocker les images en BDD#}
			  		<img src="{{ app.request.basepath }}/images/yelloworking-1.jpg" alt="Yellow Working" width="200px" height="120px">
			  	</div></div>
			  	<div class="row"><div class="col-md-12">
			  		{{workspaceFavorite.workspace.street|capitalize}}, {{workspaceFavorite.workspace.postcode}} {{workspaceFavorite.workspace.city}}
			  	</div></div>
		</div></div>
	{% endif %}
</div></div></div></div>
</div>


	<br><br><br><br>


	

{% endblock %}
