            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    {% if app.request.attributes.get('_route') == 'becowo_manager_profile' %}<li class="active">{% else %}<li>{% endif %}
