                            </li>
                            <li>
                                <a href="{{ path('becowo_manager_profile_events') }}">Les Evènements</a>
                            </li>
                            <li>
                                <a href="{{ path('becowo_manager_profile_team') }}">L'équipe</a>
                            </li>
                        </ul>
                    </li>
                    {% if app.request.attributes.get('_route') == 'becowo_manager_dashboard' %}<li class="active">{% else %}<li>{% endif %}
                        <a href="{{ path('becowo_manager_dashboard') }}"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                    </li>
                    {% if app.request.attributes.get('_route') == 'becowo_manager_booking' %}<li class="active">{% else %}<li>{% endif %}
                        <a href="{{ path('becowo_manager_booking') }}"><i class="fa fa-fw fa-calendar"></i> Réservations</a>
