                        <ul id="submenu" class="collapse">
                            <li>
                                <a href="{{ path('becowo_manager_profile_desc') }}">Identité</a>
                            </li>
                            <li>
                                <a href="{{ path('becowo_manager_profile_pictures') }}">Les photos</a>
                            </li>
                            <li>
                                <a href="{{ path('becowo_manager_profile_amenities') }}">Les Services</a>
