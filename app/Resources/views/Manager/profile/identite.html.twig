{% extends 'manager/manager-layout.html.twig' %}

{% block page %}
<div class="container-fluid">

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Profil de {{app.user.workspace.name}}
        </h1>
    </div>
</div><!-- /.row -->

{% include "CommonViews/flashMessage.html.twig" %}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
{{ form_errors(form) }}

{####################################################### Header & Logo #####################################################}
<div class="row">
	<div class="col-lg-12">
		<div class="read-name">
		<h4>Nom de l'espace
			<button type="button" class="btn btn-primary btn-xs fa fa-pencil" onclick="goWrite('name')"></button>
		</h4><div class="well well-sm">
			{{app.user.workspace.name}}
		</div></div>
		<div class="write-name">
		<h4>Nom de l'espace
			<button type="submit" class="btn btn-success btn-xs fa fa-check"></button>
			<button type="button" class="btn btn-danger btn-xs fa fa-times" onclick="goRead('name')"></button>
		</h4>  
		    {{ form_errors(form.name) }}
		    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}  
		</div>
	</div>
</div>
<br>
{####################################################### Descriptions #####################################################}
<div class="row">
    <div class="col-lg-12">
    	<div class="read-description">
    	<h4>Description
    		<button type="button" class="btn btn-primary btn-xs fa fa-pencil" onclick="goWrite('description')"></button>
		</h4><div class="well well-sm">
    		{{app.user.workspace.description}} 		
    	</div></div>
    	<div class="write-description">
    	<h4>Description
		    <button type="submit" class="btn btn-success btn-xs fa fa-check"></button>
			<button type="button" class="btn btn-danger btn-xs fa fa-times" onclick="goRead('description')"></button> 
		</h4>
		    {{ form_errors(form.description) }}
		    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}  
		</div>
	</div>
</div>
{####################################################### Bonus #####################################################}
<br>
<div class="row">
	<div class="col-lg-12">
    	<div class="read-descriptionBonus">
		<h4>Description Bonus
			<small>Mettez en avant un aspect atypique de votre espace </small>
			<button type="button" class="btn btn-primary btn-xs fa fa-pencil" onclick="goWrite('descriptionBonus')"></button>
		</h4><div class="well well-sm">
    		{{app.user.workspace.descriptionBonus}}
    		</div>
    	</div>
    	<div class="write-descriptionBonus">
    	<h4>Description Bonus
		    <button type="submit" class="btn btn-success btn-xs fa fa-check"></button>
			<button type="button" class="btn btn-danger btn-xs fa fa-times" onclick="goRead('descriptionBonus')"></button>  
		</h4>
		    {{ form_errors(form.descriptionBonus) }}
		    {{ form_widget(form.descriptionBonus, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
</div>
{####################################################### Adresse #####################################################}
<br>
<div class="row">
	<div class="col-lg-12">
    	<div class="read-adresse">
    		<h4>Adresse
    			<button type="button" class="btn btn-primary btn-xs fa fa-pencil" onclick="goWrite('adresse')"></button>
			</h4><div class="well well-sm">
			{{app.user.workspace.street}}<br>{{app.user.workspace.postCode}}, {{app.user.workspace.city}}
			</div></div>
		<div class="write-adresse">
    		<h4>Adresse
		    	<button type="submit" class="btn btn-success btn-xs fa fa-check"></button>
				<button type="button" class="btn btn-danger btn-xs fa fa-times" onclick="goRead('adresse')"></button> 
			</h4>
		    {{ form_row(form.street) }}
		    {{ form_row(form.postCode) }}
		    {{ form_row(form.city) }}
		    Pour les identifier les coordonnées géographiques, rendez-vous sur <a href="http://www.coordonnees-gps.fr/" target="_blanck">www.coordonnees-gps.fr</a>
		    {{ form_row(form.longitude) }}
		    {{ form_row(form.latitude) }}
		</div>
	</div>
</div>
{#########################################################################################################}
{{ form_rest(form) }}
{{ form_end(form) }}

{% endblock %}

{% block javascripts %}
	<script>

	goRead("name");
	goRead("description");
	goRead("descriptionBonus");
	goRead("adresse");
	</script>
{% endblock %}
