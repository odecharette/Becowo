{% extends 'manager/manager-layout.html.twig' %}

{% block page %}

<div class="row">
	<div class="col-lg-12">
		<h1>Les services</h1>
		<hr>
	</div>
</div>

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
{{ form_errors(form) }}

{####################################################### Amenities #####################################################}
 <table class="table">
	<thead>
		<tr>
			<th>Nom</th>
			<th>Description</th>
			<th>Label</th>
		</tr>
	</thead>
	<tbody>
		{% for wha in WsHasAmenities %}
			<tr>
			 	<td>{{wha.amenities.name}}</td>
			 	<td>{{wha.description}}</td>
				<td>{{wha.label}}</td>
				<td><a href="{{ path('becowo_manager_profile_wha_delete', { 'id': wha.id }) }}"><button type="button" class="btn btn-danger fa fa-trash-o"></button></a></td> 
			</tr>
		{% endfor %}
	</tbody>
</table> 

<div class="row">
    <div class="col-lg-5">
    	<div class="read-amenities">
    		<button type="button" class="btn btn-primary" onclick="goWrite('amenities')">Ajouter un service</button>
    	</div>
    	<div class="write-amenities">
			{{ form_rest(form) }}
			{{ form_end(form) }}
			<button type="submit" class="btn btn-success btn-xs fa fa-check"></button>
			<button type="button" class="btn btn-danger btn-xs fa fa-times" onclick="goRead('amenities')"></button> 
		</div>
	</div>
</div>

{#########################################################################################################}

{% endblock %}

{% block javascripts %}
	<script>

	goRead("amenities");
	</script>
{% endblock %}
