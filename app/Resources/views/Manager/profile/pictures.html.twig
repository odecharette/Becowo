{% extends 'manager/manager-layout.html.twig' %}

{% block page %}
<div class="container-fluid">

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Profil de {{app.user.workspace.name}}
        </h1>
    </div>
</div><!-- /.row -->

{% include "CommonViews/flashMessage.html.twig" %}



{########################################### Pictures ######################################################}

<div class="row">
	<div class="col-lg-12">
		<h4>Vos photos </h4>
		{% for pic in pics %}
			<img src="{{ asset('images/Workspaces/') }}{{app.user.workspace.name}}/{{pic.url}}" alt="{{pic.alt}}" width="100" height="100">
		{% endfor %}
		<div class="read-pics">
			<button type="button" class="btn btn-primary btn-xs fa fa-pencil" onclick="goWrite('pics')"></button>
		</div>
		<div class="write-pics">
			{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
			{{ form_errors(form) }}
			{{ form_rest(form) }}
			<button type="submit" class="btn btn-success btn-xs fa fa-check"></button>
			<button type="button" class="btn btn-danger btn-xs fa fa-times" onclick="goRead('pics')"></button>
			{{ form_end(form) }}
		</div> 
	</div>
</div>
<br>

{#######################################################################################################}


{% endblock %}

{% block javascripts %}
	<script>

	goRead("pics");
	</script>
{% endblock %}
