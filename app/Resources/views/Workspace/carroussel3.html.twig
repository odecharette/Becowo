<div class="container-fluid">
      <div class="row">
        <div class="col-lg-3">
        	{# Vertical navigator #}
            <div id="myCarousel" class="carousel vertical slide pull-left" >

            	{% if pictures|length > 10 %}
		              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
		              	<i class="fa fa-chevron-up fa-2x" aria-hidden="true"></i>
		              </a>
              	{% else %}
              		<div class="vide"><br><br></div>
          		{% endif %}

              <!-- thumbnails -->
              <div class="custom-carousel-inner carousel-inner">
                <div class="item active">
                  <div class="row-fluid">
                	{% for picture in pictures %}
                		{% if loop.index < 10 %}
                			{% if loop.index % 2 != 0 %}<div class="span3">{% endif %}
                        	
                        		{% if loop.last %}
                        			<a href="#x" class="small-thumbnail" style="width:45%;">
                        		{% else %}
	                        		<a href="#x" class="small-thumbnail">
	                        	{% endif %}
	                        		<img src="{{ asset('images/Workspaces/') }}{{ws.name}}/{{picture.url}}" alt="{{picture.alt}}" data-display="{{ asset('images/Workspaces/') }}{{ws.name}}/{{picture.url}}" style="max-width:100%;">
	                        	</a>
                        	{% if loop.index % 2 == 0 or loop.index == 9 %}</div>{% endif %}
                  		{% endif %}
                	{% endfor %}
                  </div><!--/row-fluid-->
                </div><!--/item-->

                <div class="item">
                  <div class="row-fluid">
                	{% for picture in pictures %}
                		{% if loop.index >= 10 %}
                			{% if loop.index % 2 != 0 %}<div class="span3">{% endif %}
                        	
	                        	{% if loop.last %}
                        			<a href="#x" class="small-thumbnail" style="width:45%;">
                        		{% else %}
	                        		<a href="#x" class="small-thumbnail">
	                        	{% endif %}
	                        		<img src="{{ asset('images/Workspaces/') }}{{ws.name}}/{{picture.url}}" alt="{{picture.alt}}" data-display="{{ asset('images/Workspaces/') }}{{ws.name}}/{{picture.url}}" style="max-width:100%;">
	                        	</a>
                        	{% if loop.index % 2 == 0 or loop.last %}</div>{% endif %}
                  		{% endif %}
                	{% endfor %}
                  </div><!--/row-fluid-->
                </div><!--/item-->


              </div><!--/carousel-inner--> 

              {% if pictures|length > 10 %}
              <a class="right carousel-control" href="#myCarousel" data-slide="next"><i class="fa fa-chevron-down fa-2x" aria-hidden="true"></i></a>    
         	 {% endif %}
            </div><!--/myCarousel-->

        </div><div class="col-lg-9">

            {# Panel o√π s'affiche l'image #}
            <div class="pull-left single-container">
              <img src="{{ asset('images/Workspaces/') }}{{ws.name}}/{{pictures[0].url}}" id="DataDisplay"/>
            </div>
        </div>
      </div>
    </div>
