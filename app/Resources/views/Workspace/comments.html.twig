 {# Visible uniquement si le membre est connecté #}
 <h3>Commentaires</h3>

{% include "CommonViews/flashMessage.html.twig" %}

{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	{{ form(form) }}
{% else %}
	<p>Pour saisir des commentaires, vous devez être connecté</p>
{% endif %}

{% for comment in listComments %}
	<div class="row">
		<div class="col-lg-2">
			<img src="{{ asset('images/ProfilePictures/') }}{{comment.member.profilePicture.url}}", alt="{{comment.member.profilePicture.alt}}" width="50px", height="50px"><br>
			<a href="{{ path('becowo_member_public_profile', {'username' : comment.member.username}) }}">{{comment.member.username}}</a>
		</div>
		<div class="col-lg-10">
			Le {{comment.postedOn|date("d/m/Y - H:i")}} <br>
			<p>{{comment.post}}</p>
		</div>
	</div>
	<br>
{% endfor %}
