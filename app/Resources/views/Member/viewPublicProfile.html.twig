{% extends "layout.html.twig" %}

{% block title %}
  {{ parent() }} - {{member.firstname}}
{% endblock %}

{% block body %}



<div class="container-fluid" id="PublicProfile">
	<div class="row name">
		{{member.firstname}} {{member.name}}
	</div>
	<div class="row">
		<div class="col-lg-3">
			<div class="picture">
				<div style="background-image:url('{{ asset('images/ProfilePictures/')}}{{member.profilePicture.url}}'); 
			    width:200px; 
			    height:200px; 
			    background-position:center;
			    background-size: cover;
			    margin: 0 auto;">&nbsp;</div>
			</div>
			<div class="tweet">
				<i class="fa fa-quote-left" aria-hidden="true"></i> 
				{{member.personnalTweet}} 
				<i class="fa fa-quote-right" aria-hidden="true"></i>	
			</div>
			<div class="identity">
				<i class="fa fa-building-o" aria-hidden="true"></i> {{member.society}} <br>
				<i class="fa fa-briefcase" aria-hidden="true"></i> {{member.job}} <br>
				<i class="fa fa-home" aria-hidden="true"></i> {{member.city}} <br>
				<i class="fa fa-external-link" aria-hidden="true"></i> <a href="{{member.website}}" target="_blank">{{member.website}}</a>	
			</div>
		</div>
		<div class="col-lg-6 middle" >
			<div class="bio">
				<h2>Bio</h2>
				{{member.description|nl2br}}
			</div>
			<div class="skills">
				<h2>Compétences</h2>
				{% set skills = member.skills|split(',') %}
				{% for skill in skills %}
				    <span class="label skill">{{skill}}</span>
				{% endfor %}
			</div>
			<div>
				<h2>Centres d'intérêts</h2>
				{% set hobbies = member.hobbies|split(',') %}
				{% for hobbie in hobbies %}
				    <span class="label hobbie">{{hobbie}}</span>
				{% endfor %}
			</div>
			<div>
				<h2>Avec Becowo j'aimerais : </h2>
				{% set wishes = member.wishes|split(',') %}
				{% for wishe in wishes %}
				    <span class="label wishe">{{wishe}}</span>
				{% endfor %}
			</div>
		</div>
		<div class="col-lg-3">
			<div class="rs">
				{% if member.facebookLink == '' and member.linkedinLink == '' and member.twitterLink == '' and member.instagramLink == '' %} 
				{% else %}
					<h2>Suivez-moi !</h2>
				{% endif %}
				{% if member.facebookLink != '' %} 
					<a href="{{member.facebookLink}}" target="_blank">
						<img src="{{ asset('images/RS/facebook.png') }}" alt="Facebook">
					</a>
				{% endif %}

				{% if member.linkedinLink != '' %} 
					<a href="{{member.linkedinLink}}" target="_blank">
						<img src="{{ asset('images/RS/linkedin.png') }}" alt="LinkedIn">
					</a>
				{% endif %}

				{% if member.twitterLink != '' %} 
					<a href="{{member.twitterLink}}" target="_blank">
						<img src="{{ asset('images/RS/twitter.png') }}" alt="Twitter">
					</a>
				{% endif %}

				{% if member.instagramLink != '' %} 
					<a href="{{member.instagramLink}}" target="_blank">
						<img src="{{ asset('images/RS/instagram.png') }}" alt="Instagram">
					</a>
				{% endif %}
			</div>
			<div class="coworking">
				<h2>Mes coworking</h2>
					{% for ws in wsBooked %}
						<a href="{{ path('becowo_core_workspace', { 'name': ws.name }) }}">{{ws.name}}</a> <br>
					{% endfor %}
			</div>
			<div class="taux">
				<h2>Taux de remplissage</h2>
				<div class="progress">
				    <div class="progress-bar" role="progressbar" aria-valuenow="{{member.fillRate}}" aria-valuemin="0" aria-valuemax="100" style="width: {{member.fillRate}}%;">
				        {{member.fillRate}} %
				    </div>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}
