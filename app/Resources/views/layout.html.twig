<!DOCTYPE html>
<html lang="fr">
<head>
	<meta name="robots" content="noindex">
	<meta charset="utf-8">
	 <meta name="viewport" content="initial-scale=1.0"> {# Pour Google Map #}
	<title>{% block title %}Becowo{% endblock %}</title>
	
    {# {% include 'css-CDN.html.twig' %}#}
    {% include 'css-local.html.twig' %} 
	
	{% block stylesheets %}
		
	{% endblock %}

</head>
<body>

{% include "CommonViews/flashMessage.html.twig" %}

	{# Plugin FB #}
<div id="fb-root"></div>

<header class="header">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
        	{# For mobile only #}
        	<div class="navbar-header">
        		<div class="row visible-xs-block">
        			<div class="col-xs-10">
		        		<a title="Accueil" href="{{ path('becowo_core_homepage') }}">
		                    <img src="{{ asset('images/icons/Logo_becowo_tagline.png') }}" alt="Becowo">
		                </a>
        			</div>
        			<div class="col-xs-2">
			        	<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
				            <span class="sr-only">Toggle navigation</span>
				            <span class="icon-bar"></span>
				            <span class="icon-bar"></span>
				            <span class="icon-bar"></span>
			            </button>
        			</div>
        		</div>
        	</div>

        	<div class="row">
        		<div class="col-lg-4 col-md-4 hidden-xs">
	                <a title="Accueil" class="navbar-brand" href="{{ path('becowo_core_homepage') }}">
	                    <img src="{{ asset('images/icons/Logo_becowo_tagline.png') }}" alt="Becowo">
	                </a>
        		</div>
        		<div class="col-lg-8">
		            <div id="navbar" class="collapse navbar-collapse navbar-responsive-collapse">
		                <ul class="nav navbar-nav navbar-right">

		                    <li class="dropdown ">
		                        <a title="Accueil" href="{{ path('becowo_core_homepage') }}">
		                            Accueil
		                        </a>
		                    </li>
		                    <li class="dropdown ">
		                        <a title="La communauté" href="{{ path('becowo_core_community') }}">
		                            La communauté
		                        </a>
		                    </li>
		                    <li class="dropdown noActive sousMenu">
		                    	<a href="" class="dropdown-toggle normal-menu" data-toggle="dropdown">
						          	Comment ça marche ? <i class="fa fa-caret-down" aria-hidden="true"></i>
						          </a>
		                    	<ul class="dropdown-menu dropdown-menu-default normal-ul">
		                    	    <li>
				                        <a title="Comment ça marche" href="{{ path('becowo_core_comment_ca_marche_coworkers') }}">
				                            Pour les coworkers
				                        </a>
		                    	    </li>
		                    	    <li>
				                        <a title="Comment ça marche" href="{{ path('becowo_core_comment_ca_marche_espaces') }}">
				                            Pour les espaces
				                        </a>
		                    	    </li>
		                    	</ul>
		                    </li>
		                    <li class="dropdown ">
		                        <a title="blog" href="http://www.blog.becowo.com/" target="_blank" class="blog_link">
		                            LE BLOG
		                        </a>
		                    </li>
		                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}		
								<li class="dropdown ">
						          <a href="" class="dropdown-toggle login-menu" data-toggle="dropdown">
						          	Bonjour {{ app.user.firstname }} <i class="fa fa-caret-down" aria-hidden="true"></i>
						          </a>
						          <ul class="dropdown-menu dropdown-menu-default">
						            <li>
						            	<a href="{{ path('fos_user_profile_edit') }}"><i class="fa fa-user"></i> Modifier mon profil</a>
						            </li>
								    <li>
								    	<a data-toggle="modal" href="#myModalChangeMDP"><i class="fa fa-key"></i> Changer mon mot de passe</a>
								    </li>
								    <li>
								    	<a href="{{ path('becowo_core_booking_myreservations') }}"><i class="fa fa-bookmark"></i> Mes réservations</a>
								    </li>
								    {% if is_granted('ROLE_MANAGER') %}
										<li>
											<a href="{{ path('becowo_manager_profile_identite') }}" target="_blank"><i class="fa fa-wrench"></i> Espace Manager</a>
										</li>
									{% endif %}
									{% if is_granted('ROLE_ADMIN') %}
										<li>
											<a href="{{ path('easyadmin') }}" target="_blank"><i class="fa fa-lock"></i> Espace Admin</a>
										</li>
									{% endif %}
								    <li>
								    	<a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out"></i> Me déconnecter</a>
								    </li>
						          </ul>
						        </li>
							{% else %}
			                    <li class="dropdown "  id="login">
			                    	<a data-toggle="modal" href="#myModalLogin">Connexion</a>
			                    </li>

						{% endif %}
		                    
		                </ul>
		            </div><!-- /navbar-collapse -->
        		</div>
        	</div>
        </div>
    </div>
{# Les modal doivent se charger en même temps pour pouvoir passer de l'une à l'autre #}
<!-- Modale Login -->
<div class="modal fade" id="myModalLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
     <div class="modal-dialog"> 
        <div class="modal-content">
            <div class="modal-body" id="myModalLoginBody">
                {{ render(url('fos_user_security_login')) }}
            </div>
        </div>
    </div>
</div>
<!-- Modale Register -->
<div class="modal-open modal fade" id="myModalRegister" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
     <div class="modal-dialog"> 
        <div class="modal-content">
            <div class="modal-body" id="myModalRegisterBody">
                {{ render(url('fos_user_registration_register')) }}
            </div>
        </div>
    </div>
</div>
<!-- Modale MDP -->
<div class="modal fade" id="myModalMDP" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
     <div class="modal-dialog"> 
        <div class="modal-content">
            <div class="modal-body"  id="myModalMDPBody">
                {{ render(url('fos_user_resetting_request')) }}
            </div>
        </div>
    </div>
</div>
<!-- Modale change MDP -->
<div class="modal fade" id="myModalChangeMDP" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
     <div class="modal-dialog"> 
        <div class="modal-content">
            <div class="modal-body"  id="myModalChangeMDPBody">
                {{ render(url('fos_user_change_password')) }}
            </div>
        </div>
    </div>
</div>
</header>


{% block body %}

{% endblock %}

<span id="top-link-block" class="hidden">
    <a href="#top" onclick="$('html,body').animate({scrollTop:0},'slow');return false;">
        <i class="fa fa-angle-double-up fa-4x" aria-hidden="true"></i>
    </a>
</span><!-- /top-link-block -->

{######################################################Footer ######################################################}
    
	<footer class="navbar">
		<div class="container-fluid">
		<div class="row">
		<div id="footer_menu" class="col-lg-3 col-md-3 col-xs-12">
			<ul>
			    <li><a href="{{ path('becowo_core_contact') }}">Contactez-nous</a></li>
			    <li><a href="{{ path('becowo_core_quisommesnous') }}">Qui sommes nous ?</a></li>
			    <li><a href="{{ path('becowo_core_faq') }}">FAQ</a></li>
			</ul>
		</div>
		<div id="footer_menu" class="col-lg-3 col-md-3 col-xs-12">
			<ul>
			    <li><a href="{{ path('becowo_core_cgu') }}">CGU</a> <a href="{{ path('becowo_core_mentions') }}">Mentions légales</a></li>
			    <li><a href="{{ path('becowo_core_cookies') }}">Gestion des cookies</a></li>
			    <li><a href="{{ path('becowo_core_offers') }}">Manager, découvrez nos offres</a></li>
			</ul>
		</div>
		<div id="footer_menu" class="col-lg-3 col-md-3 col-xs-12">
			<ul>
			    <li><a href="http://www.blog.becowo.com/" target="_blank">Blog</a></li>
			    <li><a href="{{ path('becowo_core_paiement') }}">Paiement en ligne by <img src="{{ asset('images/icons/creditAgricole/ca.png') }}" alt="Crédit Agricole"></a></li>
			    <li><a href="http://m.me/becowo" target="_blank">Tchater via messenger</a></li>
			</ul>
		</div>
		<div id="footer_menu" class="col-lg-3 col-md-3 col-xs-12">
			{% include 'CommonViews/RS/all_RS_small.html.twig' %}
		</div>
		</div>
	</div>
	</footer>


    
	{#{% include 'js-CDN.html.twig' %}#}
	 {% include 'js-local.html.twig' %} 
{% block javascripts %}
	

{% endblock %}
  	
</body>
</html>
