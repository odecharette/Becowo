			<div id="map-results-container" class="container-fluid">
				<div id="bh-sl-map" class="bh-sl-map col-lg-6"></div>
				<div class="bh-sl-loc-list col-lg-6">
					<ul class="list list-unstyled"></ul>
				</div>
			</div>
		</div>
	</div>
</div><!-- /.container-fluid -->

{############################################ Nouveaux espaces ##############################################}

<div class="container"><div class="row"><div class="col-lg-8" id="NewEspaces">
	{# Ne récupérer que les 3 derniers workspaces #}
	<h2>Les nouveaux espaces</h2>
	<div id="vignette_espace_mini" class="container-fluid">
		<div class="row text-center">
			{% for newWs in workspaces %}
				{% if loop.index < 4 %}
	 				<div class="col-lg-4">
				  		<h3>{{newWs.name}}</h3>
				  		{% for pic in picturesByWs[newWs.name] if pic.isFavorite %}
			  				<img src="{{ asset('images/Workspaces/') }}{{newWs.name}}/{{pic.url}}" alt="{{pic.alt}}" width="200px" height="120px">
	  					{% endfor %}
	  				</div>
				{% endif %}
			{% endfor %}
</div></div></div>
{############################################ Coup de coeur ##############################################}
<div class="col-lg-4" id="coupCoeur">
	<h2>Coup de coeur</h2>
	<div id="vignette_espace_mini" class="container-fluid">
 		<div class="row text-center">
			{% if workspaceFavorite %}
	 			<div class="row text-center">
			  		<h3>{{workspaceFavorite.workspace.name}}</h3>
	  			</div>
			  	<div class="row text-center">
			  		{% for pic in picturesByWs[workspaceFavorite.workspace.name] if pic.isFavorite %}
		  				<img src="{{ asset('images/Workspaces/') }}{{workspaceFavorite.workspace.name}}/{{pic.url}}" alt="{{pic.alt}}" width="200px" height="120px">
			  		{% endfor %}
			  	</div>
			{% endif %}
		</div>
	</div>
</div></div></div>

{############################################ Derniers inscrits ##############################################}
<div class="container-fluid" id="NewMembers">
	<h2>Ils ont rejoint la communauté</h2>
	<div id="members">
		{% for member in members if member.ProfilePicture.url is defined %}
			<span><a href="{{ path('becowo_member_public_profile', {'username' : member.username}) }}"><img src="{{asset('images/ProfilePictures/')}}{{member.ProfilePicture.url}}" alt="{{member.ProfilePicture.alt}}" width="115px" height="115px" class="img-circle" title="{{member.username}}, {{member.job}} @{{member.city}}"></a></span>
		{% endfor %}
</div></div>


{############################################ Nouveaux avis ##############################################}
<div class="container"><div class="row"><div class="col-lg-8" id="NewAvis">
	<h2>Les nouveaux avis</h2>
	{% for comment in comments %}
		<div class="row" id="avis">
		<div class="col-lg-2" id="avisCol1">
			Etoiles <br>{# 	TO DO #}
			{% if comment.member.ProfilePicture.url is defined %}
				<span><a href="{{ path('becowo_member_public_profile', {'username' : comment.member.username}) }}"><img src="{{asset('images/ProfilePictures/')}}{{comment.member.ProfilePicture.url}}" alt="{{comment.member.ProfilePicture.alt}}" width="70px" height="70px" class="img-circle" title="{{comment.member.username}}, {{comment.member.job}} @{{comment.member.city}}"></a></span>
			{% else %}
				{{comment.member.username}}
			{% endif %}
		</div>
		<div class="col-lg-10">
			<h4><a href="{{ path('becowo_core_workspace', {'name' : comment.workspace.name}) }}">A propos de {{comment.workspace.name}}</a></h4>
			<p>{{comment.post}}</p>
		</div>
	</div>
	{% endfor %}
</div>
{############################################ Barre Instagram ##############################################}
<div class="col-lg-4" id="Instagram">
	<h2><img src="{{asset('images/RS/instagram.png')}}">Actu Instagram</h2>
	{% include 'CommonViews/RS/instagram.html.twig' %}

</div></div></div>


