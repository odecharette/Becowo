{% extends "layout.html.twig" %}

{% block title %}
  {{ parent() }} - Accueil
{% endblock %}

{% block stylesheets %}
	{# Pour la Map, version StoreLocator #}
	<link rel="stylesheet" href="{{ asset('css/storelocator/bootstrap-example.min.css') }}">
{% endblock stylesheets %}

{% block body %}


{############################################ Vidéo ##############################################}

<div class="container" id="video"><div class="row"><div class="col-lg-6 col-lg-offset-3">
	<div class="embed-responsive embed-responsive-16by9">
	    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/FepLZO6Q2Ms" allowfullscreen></iframe>
	</div>
</div></div></div>

{############################################ Map ##############################################}

<div class="bh-sl-container container-fluid">
	<div class="jumbotron">
	<div class="container">

	<div class="bh-sl-form-container">
		<form id="bh-sl-user-location" method="post" action="#">
			<div class="form-input">
				<label for="bh-sl-search">Location name search:</label>
				<input type="text" id="bh-sl-search" name="bh-sl-search" />
				<label for="bh-sl-address">Enter Address or Zip Code:</label>
				<input type="text" id="bh-sl-address" name="bh-sl-address" />
				<select id="bh-sl-maxdistance" name="bh-sl-maxdistance">
					<option value="10">10 Km</option>
					<option value="20">20 Km</option>
					<option value="30">30 Km</option>
					<option value="40">40 Km</option>
				</select>
			</div>

			<button id="bh-sl-submit" type="submit">Submit</button>
			<button id='findMe' type="button" class="btn btn-primary">Find me</button>

			<div class="bh-sl-filters-container">
				<ul id="category-filters-container1" class="bh-sl-filters">
					<li><h3>Catégories</h3></li>
					<li>
						<label>
							<input type="checkbox" name="category" value="Coworking"> Espace de coworking
						</label>
					</li>
					<li>
						<label>
							<input type="checkbox" name="category" value="cafe"> Café
						</label>
					</li>
					<li>
						<label>
							<input type="checkbox" name="category" value="coffice"> Coffice
						</label>
					</li>
					<li>-----------</li>
					<li>
						<label>
							<input type="checkbox" name="category" value="creche"> Crèche
						</label>
					</li>
					<li>
						<label>
							<input type="checkbox" name="category" value="Salle de musculation"> Salle de musculation
						</label>
					</li>
				</ul>

				<ul id="category-filters-container2" class="bh-sl-filters">
					<li><h3>Equipements</h3></li>
					<li>
						<label>
							<input type="checkbox" name="feature" value="Snack"> Snack
						</label>
					</li>
					<li>
						<label>
							<input type="checkbox" name="feature" value="Wifi"> Wifi
						</label>
					</li>
					<li>
						<label>
							<input type="checkbox" name="feature" value="Cuisine"> Cuisine
						</label>
					</li>
				</ul>

				<ul id="city-filter" class="bh-sl-filters">
					<li><h3>Ville</h3></li>
					<li>
						<select name="city">
							<option value="">France</option>
							<option value="Paris">Paris</option>
							<option value="Lille">Lille</option>
							<option value="Aix en Provence">Aix en Provence</option>
							<option value="Marseilles">Marseilles</option>
						</select>
					</li>
				</ul>
			</div>
		</form>

	</div>
</div></div>

	<div id="bh-sl-map-container" class="bh-sl-map-container">
		<div class="row">
			<div id="map-results-container" class="container-fluid">
				<div id="bh-sl-map" class="bh-sl-map col-lg-6"></div>
				<div class="bh-sl-loc-list col-lg-6">
					<ul class="list list-unstyled"></ul>
				</div>
			</div>
		</div>
	</div>
</div>

<br><br>
{############################################ Derniers inscrits ##############################################}
<div class="container-fluid" id="NewMembers">
	<div class="row">
		<div class="col-lg-6">
			<h2>Ils ont rejoint la communauté</h2>
			{% for member in members if member.ProfilePicture.url is defined %}
				<a href="{{ path('becowo_member_public_profile', {'username' : member.username}) }}"><img src="{{asset('images/ProfilePictures/')}}{{member.ProfilePicture.url}}" alt="{{member.ProfilePicture.alt}}" width="115px" height="115px" class="img-circle" title="{{member.username}}, {{member.job}} @{{member.city}}"></a>
			{% endfor %}
		</div>
		<div class="col-lg-6">
{############################################ Barre Instagram ##############################################}
			<h2>Suivez-nous sur Instagram</h2>
			{% include 'CommonViews/RS/instagram.html.twig' %}

		</div>
	</div>
</div>


<br><br>

{############################################ Nouveaux espaces ##############################################}

<div class="container-fluid"><div class="row"><div class="col-lg-8">
	{# Ne récupérer que les 3 derniers workspaces #}
	<h2>Les nouveaux espaces</h2>
	<div id="vignette_espace_mini" class="container">
	 		<div class="row">
	{% for newWs in workspaces %}
		{% if loop.index < 3 %}
		<div class="col-lg-4">
	 		<div class="well">
	 			<div class="row text-center"><div class="col-lg-12">
				  	<h2>{{newWs.name}}</h2>
			  	</div></div>
			  	<div class="row"><div class="col-lg-12">
			  		{% for pic in picturesByWs[newWs.name] if pic.isFavorite %}
		  				<img src="{{ asset('images/Workspaces/') }}{{newWs.name}}/{{pic.url}}" alt="{{pic.alt}}" width="200px" height="120px">
			  		{% endfor %}
			  		
			  	</div></div>
			  	<div class="row"><div class="col-lg-12">
			  		{{newWs.street|capitalize}}, {{newWs.postcode}} {{newWs.city}}
			  	</div></div>
		</div></div>
		{% endif %}
	{% endfor %}
</div></div></div>
{############################################ Coup de coeur ##############################################}
<div class="col-lg-4">
	<h2>Notre coup de coeur</h2>
	<div id="vignette_espace_mini" class="container-fluid">
	 		<div class="row">
	{% if workspaceFavorite %}
		<div class="col-lg-12">
	 		<div class="well">
	 			<div class="row text-center"><div class="col-lg-12">
				  	<h2>{{workspaceFavorite.workspace.name}}</h2>
			  	</div></div>
			  	<div class="row"><div class="col-lg-12">
			  		{% for pic in picturesByWs[workspaceFavorite.workspace.name] if pic.isFavorite %}
		  				<img src="{{ asset('images/Workspaces/') }}{{workspaceFavorite.workspace.name}}/{{pic.url}}" alt="{{pic.alt}}" width="200px" height="120px">
			  		{% endfor %}
			  	</div></div>
			  	<div class="row"><div class="col-lg-12">
			  		{{workspaceFavorite.workspace.street|capitalize}}, 
			  		{{workspaceFavorite.workspace.postcode}} 
			  		{{workspaceFavorite.workspace.city}}
			  	</div></div>
		</div></div>
	{% endif %}
</div></div></div></div>
</div>

