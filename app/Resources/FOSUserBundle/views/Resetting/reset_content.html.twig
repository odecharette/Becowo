{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid">
	<div class="row text-center">
		<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
			<h3>Saisir un nouveau mot de passe</h3>
			<br>
			{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}

			{# {{ form_widget(form) }} #}
		    {{ form_widget(form.plainPassword.first, {'required': false, 'attr': {'placeholder': 'Nouveau mot de passe'}} )}}
		    {{ form_errors(form.plainPassword.first)}}
		    <br>
		    {{ form_widget(form.plainPassword.second, {'required': false, 'attr': {'placeholder': 'Confirmer le mot de passe'}} )}}
		    {{ form_errors(form.plainPassword.second)}}
		    <br>
		    <input type="submit" class="btn" value="{{ 'resetting.reset.submit'|trans }}" />
		    {{ form_rest(form) }}
		{{ form_end(form) }}
		</div>
	</div>
</div>


