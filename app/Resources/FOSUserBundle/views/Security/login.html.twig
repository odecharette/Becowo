{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">

	<div class="input-group">
	  <span class="input-group-addon" id="basic-addon1">Pseudo</span>
	  <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" aria-describedby="basic-addon1" />
	</div>
	<br>

	<div class="input-group">
	  <span class="input-group-addon" id="basic-addon1"><label for="password">{{ 'security.login.password'|trans }}</label></span>
	  <input type="password" id="password" name="_password" required="required" class="form-control" aria-describedby="basic-addon1" />
	</div>
	<br>

	<div class="input-group">
	  <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
	  <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
	</div>	

	  <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"  />
    
    

    
</form>
{% endblock fos_user_content %}
