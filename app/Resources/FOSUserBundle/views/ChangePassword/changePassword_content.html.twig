{% trans_default_domain 'FOSUserBundle' %}

<div class="form-box">
	<div class="form-top">
		<div class="form-top-left">
			<h3>Mot de passe</h3>
    		<p>Veuillez choisir un nouveau mot de passe</p>
    		<br>
    		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            	{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            	<a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
        	{% endif %}
		</div>
		<div class="form-top-right">
			<i class="fa fa-pencil"></i>
		</div>
    </div>
	<div class="form-bottom">
	{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    {# {{ form_widget(form) }} #}

    <div class="form-group">
		<div class="row">
			<div class="col-lg-2"><i class="fa fa-unlock-alt" aria-hidden="true" id="icon"></i></div>
			<div class="col-lg-10"><label class="sr-only" for="current_password">{{ form_label(form.current_password) }}</label>
		  	{{ form_widget(form.current_password, {'attr': {'placeholder': 'form.current_password'|trans}}) }}
		    {{ form_errors(form.current_password) }}</div>
		</div>
	</div>

	<div class="form-group">
			<div class="row">
		    <div class="col-lg-2"><i class="fa fa-unlock-alt" aria-hidden="true" id="icon"></i></div>
				<div class="col-lg-10"><label class="sr-only" for="password">{{ form_label(form.plainPassword.first) }}</label>
		    {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'form.new_password'|trans}}) }}
		    {{ form_errors(form.plainPassword.first) }}</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
		    <div class="col-lg-2"><i class="fa fa-unlock-alt" aria-hidden="true" id="icon"></i></div>
				<div class="col-lg-10"><label class="sr-only" for="plainPassword.second">{{ form_label(form.plainPassword.second) }}</label>
		    	{{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'form.new_password_confirmation'|trans}}) }}
		    	{{ form_errors(form.plainPassword.second) }}</div>
			</div>
		</div>
{{ form_rest(form) }}
	<button type="submit" class="btn" id="_submit" name="_submit"> {{ 'change_password.submit'|trans }}</button>
		  
	{{ form_end(form) }}
	</div>
</div>
